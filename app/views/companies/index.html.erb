<h1>Companies#index</h1>

<table class="">
  <thead>
    <tr>
      <th>name</th>
      <th>email</th>      
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>        
        <td><%= company.email %></td>
        <td><%= link_to 'show', company_path(company) %></td>
        <td><%= link_to "edit", edit_company_path(company) %></td>
         <td><%= link_to "delete", company_path(company), method: :delete, data: { confirm: "Voulez-vous vraiment supprimer?" } %></td>
      </tr>
    <% end %>
  </tbody>
<table>
